<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/head_por"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/share_s_public_head_small_big"/>

        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/head_por"
            android:layout_marginBottom="6dp"
            android:layout_toRightOf="@+id/head_por"
            android:text="00"
            android:textColor="@color/text_black"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/apptitle"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_38"/>

        <!-- <ImageView -->
        <!-- android:layout_width="100dp" -->
        <!-- android:layout_height="40dp" -->
        <!-- android:layout_alignParentBottom="true" -->
        <!-- android:layout_marginLeft="20dp" -->
        <!-- android:layout_toRightOf="@+id/apptitle" -->
        <!-- android:src="@drawable/app_title_e" /> -->

        <TextView
            android:id="@+id/title_names"
            style="@style/text_style_18_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:text="首页"
            android:textColor="@color/text_white"
            android:textSize="18dp"
            android:visibility="gone"/>

        <!-- <ImageView -->
        <!-- android:layout_width="40dp" -->
        <!-- android:layout_height="40dp" -->
        <!-- android:layout_centerInParent="true" -->
        <!-- android:layout_alignParentRight="true" -->
        <!-- android:layout_marginRight="10dp" -->
        <!-- /> -->

        <TextView
            android:id="@+id/bt_main_title_right"
            style="@style/title_btn_bg_theme2"/>

        <TextView
            android:id="@+id/bt_main_title_right1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/return_selector"
            android:gravity="center"
            android:text="退出"
            android:textColor="@color/text_white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="gone"/>
