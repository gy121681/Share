<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical" >

    <include layout="@layout/title_style_three" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/bgcolor"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <!-- <TextView -->
            <!-- style="@style/mStyle.blue12_left" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="@dimen/reg_title_tvheight" -->
            <!-- android:layout_marginLeft="@dimen/reg_title_tv_margin_left" /> -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@color/white" >

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:background="#1EB3B9"
                        android:drawableRight="@drawable/triangle1" />

                    <TextView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv1"
                        android:background="@drawable/triangle1" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp" >

                    <TextView
                        android:id="@+id/textView1"
                        style="@style/mStyle.reg_content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账户总余额(元)"
                        android:textColor="#6892BC"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/textView1"
                        android:orientation="horizontal" >

                        <!-- <TextView -->
                        <!-- style="@style/mStyle.reg_content_title" -->
                        <!-- android:layout_width="wrap_content" -->
                        <!-- android:layout_height="wrap_content" -->
                        <!-- android:text="￥" -->
                        <!-- android:textColor="@color/regBlue" -->
                        <!-- android:textSize="25.0dip" /> -->

                        <TextView
                            android:id="@+id/tv_total_assets"
                            style="@style/mStyle.reg_content_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/textView1"
                            android:gravity="center_horizontal"
                            android:text="0.00"
                            android:textColor="#234A73"
                            android:textSize="30dp" />
                    </LinearLayout>

                    <!-- <TextView -->
                    <!-- android:id="@+id/bt_rich_right" -->
                    <!-- style="@style/title_btn_bg_theme2" -->
                    <!-- android:text="账单" /> -->

                    <ProgressBar
                        android:id="@+id/loading_process_dialog"
                        android:layout_width="32.0dip"
                        android:layout_height="32.0dip"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:indeterminate="false"
                        android:indeterminateDrawable="@anim/loading"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:background="@color/white" >

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:background="#FE0000" />

                    <TextView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv1"
                        android:background="@drawable/triangle2" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp" >

                    <!-- android:layout_marginLeft="@dimen/reg_layout_margin" -->
                    <!-- android:layout_marginRight="@dimen/reg_layout_margin" -->

                    <TextView
                        android:id="@+id/textView1"
                        style="@style/mStyle.reg_content_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总收益(元)"
                        android:textColor="#6892BC"
                        android:textSize="12.0dip" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/textView1"
                        android:orientation="horizontal" >

                        <!-- <TextView -->
                        <!-- style="@style/mStyle.reg_content_title" -->
                        <!-- android:layout_width="wrap_content" -->
                        <!-- android:layout_height="wrap_content" -->
                        <!-- android:text="￥" -->
                        <!-- android:textColor="@color/regBlue" -->
                        <!-- android:textSize="20.0dip" /> -->

                        <TextView
                            android:id="@+id/tv_accumulated_earnings"
                            style="@style/mStyle.reg_content_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/textView1"
                            android:gravity="center_horizontal"
                            android:text="0.00"
                            android:textColor="#E23B42"
                            android:textSize="30dp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:background="#FEE100" />

                    <TextView
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv1"
                        android:background="@drawable/triangle3" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:id="@+id/textView1"
                            style="@style/mStyle.reg_content_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="昨日收益(元)"
                            android:textColor="#A0A0A0"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/textView1"
                            android:orientation="horizontal" >

                            <!-- <TextView -->
                            <!-- style="@style/mStyle.reg_content_title" -->
                            <!-- android:layout_width="wrap_content" -->
                            <!-- android:layout_height="wrap_content" -->
                            <!-- android:text="￥" -->
                            <!-- android:textColor="@color/regBlue" -->
                            <!-- android:textSize="20.0dip" /> -->

                            <TextView
                                android:id="@+id/tv_earnings_yesterday"
                                style="@style/mStyle.reg_content_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/textView1"
                                android:gravity="center_horizontal"
                                android:text="0.00"
                                android:textColor="#484848"
                                android:textSize="22dp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="5dp"
                        android:paddingTop="10dp" >

                        <TextView
                            android:id="@+id/textView1"
                            style="@style/mStyle.reg_content_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="近一月收益(元)"
                            android:textColor="#A0A0A0"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/textView1"
                            android:orientation="horizontal" >

                            <!-- <TextView -->
                            <!-- style="@style/mStyle.reg_content_title" -->
                            <!-- android:layout_width="wrap_content" -->
                            <!-- android:layout_height="wrap_content" -->
                            <!-- android:text="￥" -->
                            <!-- android:textColor="@color/regBlue" -->
                            <!-- android:textSize="20.0dip" /> -->

                            <TextView
                                android:id="@+id/tv_in_recent_month_income"
                                style="@style/mStyle.reg_content_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/textView1"
                                android:layout_below="@+id/textView1"
                                android:gravity="center_horizontal"
                                android:text="0.00"
                                android:textColor="#484848"
                                android:textSize="22dp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/bgcolor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="10dp"
                        android:paddingTop="5dp" >

                        <TextView
                            android:id="@+id/textView1"
                            style="@style/mStyle.reg_content_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="近一周收益(元)"
                            android:textColor="#A0A0A0"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView1"
                            android:orientation="horizontal" >

                            <!-- <TextView -->
                            <!-- style="@style/mStyle.reg_content_title" -->
                            <!-- android:layout_width="wrap_content" -->
                            <!-- android:layout_height="wrap_content" -->
                            <!-- android:text="￥" -->
                            <!-- android:textColor="@color/regBlue" -->
                            <!-- android:textSize="20.0dip" /> -->

                            <TextView
                                android:id="@+id/tv_nearly_week_earnings"
                                style="@style/mStyle.reg_content_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@id/textView1"
                                android:layout_below="@id/textView1"
                                android:gravity="center_horizontal"
                                android:text="0.00"
                                android:textColor="#484848"
                                android:textSize="22dp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:paddingBottom="5dp"
                        android:paddingTop="10dp" >

                        <TextView
                            android:id="@+id/textView1"
                            style="@style/mStyle.reg_content_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="年利率"
                            android:textColor="#A0A0A0"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/textView1"
                            android:orientation="horizontal" >

                            <!-- <TextView -->
                            <!-- style="@style/mStyle.reg_content_title" -->
                            <!-- android:layout_width="wrap_content" -->
                            <!-- android:layout_height="wrap_content" -->
                            <!-- android:text="￥" -->
                            <!-- android:textColor="@color/regBlue" -->
                            <!-- android:textSize="20.0dip" /> -->

                            <TextView
                                style="@style/mStyle.reg_content_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/textView1"
                                android:layout_below="@+id/textView1"
                                android:gravity="center_horizontal"
                                android:text="18%"
                                android:textColor="#484848"
                                android:textSize="22dp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/bgcolor"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/into_vip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/reg_layout_margin"
                    android:layout_marginRight="@dimen/reg_layout_margin"
                    android:layout_marginTop="6.0dip"
                    android:layout_weight="1"
                    android:background="@drawable/selector_next_normal"
                    android:text="转入VIP"
                    android:textColor="@color/text_white"
                    android:textSize="16.0dip"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>