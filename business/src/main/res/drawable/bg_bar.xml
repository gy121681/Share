    <item android:id="@+android:id/background">
        <shape>

            <!-- 填充颜色 -->
            <solid android:color="@color/applin" >
            </solid>

            <!-- 矩形的圆角半径 -->
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item android:id="@+android:id/secondaryProgress">
        <clip>
            <shape>

                <!-- 填充颜色 -->
                <solid android:color="@color/applin" >
                </solid>

                <!-- 矩形的圆角半径 -->
                <corners android:radius="20dp" />
            </shape>
        </clip>
    </item>
    <item android:id="@+android:id/progress">
        <clip>
            <shape>

                <!-- 填充颜色 -->
                <!-- <solid android:color="@color/bg_top_bar" > -->
                <!-- </solid> -->


                <!-- 矩形的圆角半径 -->
                <corners android:radius="20dp" />

                <gradient
                    android:angle="45"
                     android:centerColor="#FF7256"
					android:endColor="#FF0000"
                    android:startColor="#FF7256" />
            </shape>
        </clip>
    </item>
