<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/bg_top_bar">

        <LinearLayout

            android:id="@+id/llTopBack"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgTopBack"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/share_b_public_back1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvTopTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/topbar_title"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnTopRight3"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginRight="@dimen/margin_normal"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnTopRight2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="@dimen/margin_normal"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btnTopRight1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_normal"
                android:background="@null"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:visibility="gone"/>
        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/common_line_h"
        android:id="@+id/divider"/>

</LinearLayout>