<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/form_all_bg"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="300.0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip" >

        <TextView
            android:id="@+id/tv_basis_type"
            android:layout_width="10.0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:gravity="center"
            android:paddingLeft="3.0dip"
            android:paddingTop="3.0dip"
            android:text="转出其它账户"
            android:textColor="@color/txt_fg_normal"
            android:textSize="26.0sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_opaccount_date_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_trading_state_id"
            android:layout_alignBottom="@+id/tv_trading_state_id"
            android:layout_toRightOf="@+id/tv_basis_type"
            android:background="#00000000"
            android:paddingLeft="3.0dip"
            android:paddingTop="3.0dip"
            android:text="开户日期:"
            android:textColor="@color/txt_fg_normal"
            android:textSize="10.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_basis_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_principal_amt_hint"
            android:layout_alignBottom="@+id/tv_principal_amt_hint"
            android:layout_toRightOf="@+id/tv_principal_amt_hint"
            android:background="#00000000"
            android:paddingLeft="3.0dip"
            android:paddingTop="3.0dip"
            android:text="99.01"
            android:textColor="@color/txt_fg_normal"
            android:textSize="10.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_basis_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_earnings"
            android:background="#00000000"
            android:paddingLeft="3.0dip"
            android:paddingTop="3.0dip"
            android:text="已支取"
            android:textColor="@color/txt_fg_normal"
            android:textSize="10.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_opaccount_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_opaccount_date_hint"
            android:layout_alignBottom="@id/tv_opaccount_date_hint"
            android:layout_toRightOf="@id/tv_opaccount_date_hint"
            android:background="#00000000"
            android:paddingLeft="3.0dip"
            android:paddingTop="3.0dip"
            android:text="2014-10-11"
            android:textColor="@color/txt_fg_normal"
            android:textSize="10.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_earnings_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_basis_state"
            android:layout_toLeftOf="@+id/tv_earnings"
            android:background="#00000000"
            android:paddingLeft="3.0dip"
            android:paddingTop="3.0dip"
            android:text="购物奖励:"
            android:textColor="@color/txt_fg_normal"
            android:textSize="10.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_earnings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/tv_basis_state"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:paddingLeft="3.0dip"
            android:paddingTop="3.0dip"
            android:text="120.0"
            android:textColor="@color/txt_fg_normal"
            android:textSize="10.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_trading_state_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_earnings_hint"
            android:layout_toLeftOf="@+id/tv_basis_state"
            android:background="#00000000"
            android:paddingLeft="3.0dip"
            android:paddingTop="3.0dip"
            android:text="状态:"
            android:textColor="@color/txt_fg_normal"
            android:textSize="10.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_principal_amt_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_earnings_hint"
            android:layout_alignBottom="@+id/tv_earnings_hint"
            android:layout_alignLeft="@+id/tv_opaccount_date_hint"
            android:background="#00000000"
            android:paddingLeft="3.0dip"
            android:paddingTop="3.0dip"
            android:text="充值:"
            android:textColor="@color/txt_fg_normal"
            android:textSize="10.0sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginTop="15.0dip"
        android:contentDescription="帐号管理"
        android:src="@drawable/arrow_right_01" />

</LinearLayout>