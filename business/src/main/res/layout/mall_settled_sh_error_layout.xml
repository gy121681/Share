<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/bg_activity"
    android:gravity="clip_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/yingyezhizhao_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_normal"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/scrz_sh_error" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="由于您身份证信息核对不上,审核不通过"
            android:textColor="@color/text_hui"
            android:textSize="16sp" />

        <Button
            android:id="@+id/chongxin_tijiao_btn"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_normal"
            android:background="@drawable/banner_user_c"
            android:gravity="center"
            android:text="重新提交资料"
            android:textColor="@color/bg_top_bar"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>