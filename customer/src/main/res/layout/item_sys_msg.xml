<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="horizontal"
    android:padding="10dp" >

    <com.shareshenghuo.app.user.widget.CircleImageView
        android:id="@+id/civMsgAvatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/p7"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tvMsgName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue_dark"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMsgIsReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回复了您的评论"
                android:textColor="@color/gray_light"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvMsgContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="非常感谢"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvMsgTime"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_normal"
            android:text="15:00"
            android:textColor="@color/gray_dark"
            android:textSize="11sp" />
    </LinearLayout>

</LinearLayout>