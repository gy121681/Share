<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <!-- corner_bg -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <!-- <ImageView -->
        <!-- android:id="@+id/img_1" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="100dp" -->
        <!-- android:layout_marginLeft="10dp" -->
        <!-- android:layout_marginRight="10dp" -->
        <!-- android:src="@drawable/dialog_titles" /> -->
        <!-- <ImageView -->
        <!-- android:id="@+id/img_1" -->
        <!-- android:layout_width="match_parent" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_marginLeft="20dp" -->
        <!-- android:layout_marginRight="20dp" -->


        <!-- android:src="@drawable/dialog_titles" /> -->

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="570dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/share_s_notice_bg"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/re_title"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp">

                    <!-- <ImageView -->
                    <!-- android:id="@+id/img_1" -->
                    <!-- android:layout_width="wrap_content" -->
                    <!-- android:layout_height="wrap_content" -->
                    <!-- android:layout_marginLeft="10dp" -->
                    <!-- android:layout_marginRight="10dp" -->


                    <!-- android:src="@drawable/dialog_titles" /> -->

                    <RelativeLayout
                        android:id="@+id/btn_right"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true" >

                        <TextView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/share_s_notice_close" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="公告"
                        android:textColor="#074079"
                        android:textSize="20dp"
                        android:visibility="gone"/>
                </RelativeLayout>

                <!-- <TextView -->
                <!-- android:layout_width="match_parent" -->
                <!-- android:layout_height="1dp" -->
                <!-- android:background="@color/applin" /> -->
                <!-- <ImageView -->
                <!-- android:layout_width="fill_parent" -->
                <!-- android:layout_height="wrap_content" -->
                <!-- android:padding="10.0dip" -->
                <!-- android:src="@drawable/line" /> -->

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share_s_notice_bg_title"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/re_title"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/re_title"
                    android:layout_marginBottom="120dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:layout_marginTop="60dp">

                    <ScrollView
                        android:id="@+id/sc_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scrollbars="none"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:id="@+id/tv_prompt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="top"
                            android:paddingLeft="15.0dip"
                            android:paddingRight="15.0dip"
                            android:paddingTop="15dp"
                            android:textColor="@color/black"
                            android:textSize="15.0dip" />
                        <!-- android:text="@string/qhpro" -->
                    </ScrollView>

                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tv_title"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:text="秀儿信息技术有限公司"
                        android:textColor="@color/gray"
                        android:textSize="13.0dip"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@id/tv_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:textColor="@color/gray"
                        android:textSize="13.0dip"
                        android:visibility="gone" />
                    <!-- android:text="@string/qhpros" -->
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/lin_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_left"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text="确定"
                        android:textColor="#1985EF"
                        android:textSize="18.0dip"
                        android:visibility="gone" />
                    <!-- btn_yellow_bg -->


                    <!-- <TextView -->
                    <!-- android:layout_width="1dp" -->
                    <!-- android:layout_height="match_parent" -->
                    <!-- android:background="@color/applin" /> -->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:gravity="center"
                        android:textSize="18.0dip" />
                    <!-- android:background="@drawable/form_bg_wihte" -->


                    <!-- btn_white_bg -->
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- <TextView -->
                <!-- android:layout_width="match_parent" -->
                <!-- android:layout_height="1dp" -->
                <!-- android:background="@color/applin" /> -->

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>