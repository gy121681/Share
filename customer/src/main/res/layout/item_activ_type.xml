<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp" >

        <com.shareshenghuo.app.user.widget.CircleImageView
            android:id="@+id/ivActivTypeIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/share_c_business_details_photo_default" />

        <ImageView
            android:id="@+id/ivActivNew"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:src="@drawable/dot_red" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvActivTypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:textSize="13sp"
        android:textColor="@color/tab_text_nor"
        android:text="类型" />
</LinearLayout>
