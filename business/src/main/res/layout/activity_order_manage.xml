<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/bg_top_bar" >

        <LinearLayout
            android:id="@+id/llTopBack"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:src="@drawable/share_b_public_back1" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTopTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:drawableRight="@drawable/ic_dropdown"
            android:textColor="@color/text_white"
            android:textSize="@dimen/topbar_title"
            android:text="全部订单" />

        <LinearLayout
            android:id="@+id/llTopSearch"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/btn_search" />
        </LinearLayout>

    </RelativeLayout>

    <com.shareshenghuo.app.shop.widget.MyTabView
        android:id="@+id/tabOrderManage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>