<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_arc_gray"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvDateStart"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:hint="选择开始时间"
                android:textColorHint="@color/text_gray"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:textColor="@color/tab_text_nor"
                android:textSize="15dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_margin="6dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_arc_gray"
            android:orientation="horizontal" >

            <!-- <TextView -->
            <!-- android:layout_margin="@dimen/margin_normal" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="match_parent" -->
            <!-- android:text="选择结束时间" /> -->

            <TextView
                android:id="@+id/tvDateEnd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:hint="选择结束时间"
                android:textColorHint="@color/text_gray"
                android:paddingLeft="20dp"
                android:paddingRight="10dp"
                android:textColor="@color/tab_text_nor"
                android:textSize="15dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_margin="6dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_arc_gray" >

<!--             <EditText -->
<!--                 android:id="@+id/edquery" -->
<!--                 android:layout_width="match_parent" -->
<!--                 android:layout_height="45dp" -->
<!--                 android:layout_marginLeft="20dp" -->
<!--                 android:layout_marginRight="20dp" -->
<!--                 android:background="@drawable/bg_arc_gray" -->
<!--                 android:gravity="center_vertical" -->
<!--                 android:hint="输入姓名/手机号" -->
<!--                 android:paddingLeft="10dp" -->
<!--                 android:textSize="15dp" /> -->

            <EditText
                android:paddingRight="10dp"
                android:textColor="@color/tab_text_nor"
                android:paddingLeft="10dp"
                android:id="@+id/edquery"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bg_arc_gray"
                android:gravity="center_vertical"
                android:hint="输入姓名/手机号"
                android:textColorHint="@color/text_gray"
                android:textSize="15dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnNo"
                style="@style/btn_pink"
                android:background="@drawable/share_c_mine_button_modify_telephone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_weight="1"
                android:textColor="@color/text_black"
                android:gravity="center"
                android:text="取消" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnOK"
                style="@style/btn_pink"
                android:background="@drawable/share_c_mine_button_modify_telephone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_weight="1"
                android:textColor="@color/text_black"
                android:gravity="center"
                android:text="确定" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>