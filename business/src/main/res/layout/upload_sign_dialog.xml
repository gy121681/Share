    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/black"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="请在下方签名(正楷)"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true" >

            <Button
                android:id="@+id/btn_upload_dialog_ok"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginRight="@dimen/margin_normal"
                android:background="@drawable/form_bg_none"
                android:text="完成"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_upload_dialog_clear"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@drawable/form_bg_none"
                android:text="清除"
                android:textColor="@color/black" />
        </LinearLayout>
    </RelativeLayout>

    <!-- android:background="@drawable/authentication_bg" -->

    <TextView
        android:id="@+id/tv_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="刷卡交易时必须有持卡人真实有效签名，否则您可能无法收到清算资金，本公司不承担因此所产生的交易风险"
        android:textColor="@color/black"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_bala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="金额"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <FrameLayout
        android:id="@+id/tablet_view"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

