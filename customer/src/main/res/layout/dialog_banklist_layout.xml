<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/multichoic_title"
                android:layout_width="match_parent"
                android:layout_height="40.0dip"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:gravity="left|center"
                android:paddingLeft="10.0dip"
                android:text="title"
                android:visibility="visible" />

            <CheckBox
                android:visibility="gone"
                android:id="@+id/chk_selectall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_weight="1"
                android:checked="false"
                android:focusable="false"
                android:gravity="right|center" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/applin" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="260dp"
            android:gravity="center" >

            <ListView
                android:id="@+id/multichoiceList"
                android:layout_width="fill_parent"
                android:layout_height="260.0dip"
                android:cacheColorHint="@color/transparent"
                android:dividerHeight="1dp"
                android:minHeight="120.0dip" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/applin" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/positiveButton"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@drawable/form_bg_wihte"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="添加"
                android:textSize="16dp" />

            <Button
                android:id="@+id/negativeButton"
                android:layout_width="114.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="20.0dip"
                android:gravity="center"
                android:text="@string/cancel"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>