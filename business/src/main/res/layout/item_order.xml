<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/ivOrderTypeIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/tag_wai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="单号：" />

        <TextView
            android:id="@+id/tvOrderNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21357125375" />
    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="6dp"
        android:background="@color/gray_lighter"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp" >

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_date" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:textColor="@color/gray_dark"
            android:text="下单时间：" />

        <TextView
            android:id="@+id/tvOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:textColor="@color/gray_dark"
            android:text="2015-09-08 21：00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp" >

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/icon_152" />

        <TextView
            android:id="@+id/tvOrderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:textColor="@color/gray_dark"
            android:text="地址：" />

        <TextView
            android:id="@+id/tvOrderAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:textColor="@color/gray_dark"
            android:text="福建省福州市鼓楼区" />
    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_arc_gray" >
        
	    <ListView
	        android:id="@+id/lvItemOrderProd"
	        android:layout_width="match_parent"
	        android:layout_height="10dp"
	        android:listSelector="@null"
	        android:divider="@null"
	        android:dividerHeight="6dp" >
	    </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_gravity="right" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/gray_dark"
            android:text="共" />

        <TextView
            android:id="@+id/tvOrderProdCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/gray_dark"
            android:text="4" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/gray_dark"
            android:text="件商品 合计：¥" />
        
        <TextView
            android:id="@+id/tvOrderRealFee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:textColor="@color/gray_dark"
            android:text="0.0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp" >

        <TextView
            android:id="@+id/tvOrderStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/red_dark"
            android:text="待接单" />
        
        <Button
            android:id="@+id/btnReceive"
            style="@style/btn_pink"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:text="接单" />

        <Button
            android:id="@+id/btnRefuse"
            style="@style/btn_pink"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:text="拒绝" />

        <Button
            android:id="@+id/btnDeliver"
            style="@style/btn_pink"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:text="派送" />
        
        <Button
            android:id="@+id/btnRefundOK"
            style="@style/btn_pink"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:text="退款同意" />
        
        <Button
            android:id="@+id/btnRefundNO"
            style="@style/btn_pink"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:text="退款拒绝" />
        
        <Button
            android:id="@+id/btnSettle"
            style="@style/btn_pink"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:text="收钱" />
    </LinearLayout>
</LinearLayout>
