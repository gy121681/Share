<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical" >

    <include layout="@layout/layout_top_bar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/margin_normal"
        android:background="@color/applin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="卡号:"
                android:textSize="15dp" />

            <com.shareshenghuo.app.user.widget.NullMenuEditText
                android:id="@+id/card_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_normal"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="填写油卡卡号"
                android:inputType="number"
                android:longClickable="false"
                android:maxLength="25"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:background="@color/applin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:text="确认卡号:"
                android:textSize="15dp" />

            <com.shareshenghuo.app.user.widget.NullMenuEditText
                android:id="@+id/card_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_normal"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="请重复填写油卡卡号"
                android:inputType="number"
                android:longClickable="false"
                android:maxLength="25"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:background="@color/applin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="石油公司:"
                android:textSize="15dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/img_sh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_marginTop="5dp"
                    android:background="@color/white"
                    android:gravity="center_vertical" />

                <TextView
                    android:id="@+id/tvs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_toRightOf="@+id/img_sh"
                    android:gravity="center_vertical"
                    android:textSize="15dp" />

                <!-- <Spinner -->
                <!-- android:id="@+id/spinner" -->
                <!-- android:layout_toRightOf="@+id/img_sh" -->
                <!-- android:layout_width="match_parent" -->
                <!-- android:layout_height="match_parent" -->
                <!-- android:layout_weight="1" -->
                <!-- android:layout_marginLeft="@dimen/margin_normal" -->
                <!-- android:background="@color/white" -->
                <!-- android:entries="@array/types" -->
                <!-- android:gravity="bottom" -->
                <!-- android:spinnerMode="dropdown" /> -->


                <!-- <EditText -->
                <!-- android:id="@+id/cardchannelName" -->
                <!-- android:layout_width="wrap_content" -->
                <!-- android:layout_height="match_parent" -->
                <!-- android:layout_marginLeft="@dimen/margin_normal" -->
                <!-- android:layout_toRightOf="@+id/img_sh" -->
                <!-- android:background="@color/white" -->
                <!-- android:gravity="center" -->
                <!-- android:textSize="15dp" /> -->
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:background="@color/applin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="持卡人姓名:"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/card_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_normal"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="请填写姓名"
                android:inputType="textPersonName"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/commit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_btn_pink"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/applin" />

</LinearLayout>