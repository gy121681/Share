                    <!-- android:layout_alignParentBottom="true" -->
                    <!-- android:layout_marginLeft="5dp" -->
                    <!-- android:background="@color/gray_lighter" /> -->
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/applin" />
        </LinearLayout>

        <LinearLayout
