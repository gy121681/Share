<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:background="@color/bg_white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ivHomeHotItemPic"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:scaleType="centerCrop"
        android:src="@drawable/share_c_business_details_photo_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvHomeHotItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/tab_text_nor"
            android:text="阿姆斯特朗回旋炮" />

        <TextView
            android:id="@+id/tvHomeHotItemDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="11sp"
            android:textColor="@color/gray_light"
            android:text="TextView" />

        <TextView
            android:id="@+id/tvHomeHotItemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/pink_dark"
            android:text="¥100.0" />
    </LinearLayout>
</LinearLayout>
