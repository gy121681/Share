<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/real_pointimg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_arc_white"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/bg_color" />

            <TextView
                android:id="@+id/tvs1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/real_pointimg1"
                android:layout_toRightOf="@+id/real_pointimg"
                android:background="@color/white" />

            <!-- <TextView -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="5dp" -->
            <!-- android:layout_centerVertical="true" -->
            <!-- android:background="@color/applin" /> -->

            <TextView
                android:id="@+id/real_pointimg1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_arc_white"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/bg_color" />

            <TextView
                android:id="@+id/tvs2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/real_pointimg2"
                android:layout_toRightOf="@+id/real_pointimg1"
                android:background="@color/white" />
            <!-- <TextView -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="5dp" -->
            <!-- android:layout_centerVertical="true" -->
            <!-- android:layout_toLeftOf="@+id/real_pointimg2" -->
            <!-- android:background="@color/applin" /> -->

            <TextView
                android:id="@+id/real_pointimg2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_arc_white"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/bg_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="身份信息"
                android:textSize="11dp"  />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="设置交易密码"
                android:textSize="11dp" 
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="肖像认证"
                android:textSize="11dp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/v_line_zero"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/rl_title"
        android:background="@color/gray_lighter" />

</LinearLayout>