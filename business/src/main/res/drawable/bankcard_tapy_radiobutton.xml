<!-- <?xml version="1.0" encoding="utf-8"?> -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 默认时的图片 -->
    <item android:drawable="@drawable/bg_border_gray" android:state_checked="false"/>
    <!-- 选择时的图片 -->
    <item android:drawable="@drawable/btn_border_orange" android:state_checked="true"/>
    
    <item android:drawable="@drawable/bg_border_gray" android:state_pressed="false"/>
 <!-- pressed -->
    <item android:drawable="@drawable/btn_border_orange" android:state_pressed="true"/>
    
      <item android:state_focused="true" android:drawable="@drawable/bg_border_gray" />
     <item android:drawable="@drawable/bg_border_gray" />
</selector>
