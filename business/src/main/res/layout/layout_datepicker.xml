<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_margin="6dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvDateStart"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_arc_gray"
        android:drawablePadding="6dp"
        android:drawableRight="@drawable/ic_calander"
        android:gravity="center_vertical"
        android:padding="6dp"
        android:hint="选择开始时间"
        android:textColor="@color/tab_text_nor"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_margin="6dp"
        android:src="@drawable/icon_203" />

    <TextView
        android:id="@+id/tvDateEnd"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_arc_gray"
        android:drawablePadding="6dp"
        android:drawableRight="@drawable/ic_calander"
        android:gravity="center_vertical"
        android:padding="6dp"
        android:hint="选择结束时间"
        android:textColor="@color/tab_text_nor"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnOK"
        style="@style/btn_pink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_weight="0.4"
        android:text="筛选" />

</LinearLayout>