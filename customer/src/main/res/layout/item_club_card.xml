<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="6dp"
    android:background="@drawable/bg_vip_card"
    android:padding="6dp" >

    <TextView
        android:id="@+id/tvCardLevelDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="金卡"
        android:textColor="@color/text_white" />

    <TextView
        android:id="@+id/tvCardShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="小绿咖啡厅会员卡"
        android:textColor="@color/text_white" />

    <TextView
        android:id="@+id/tvCardMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/text_white"
        android:text="余额：135" />

    <TextView
        android:id="@+id/tvCardNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/tvCardMoney"
        android:text="NO.21356"
        android:textColor="@color/text_white" />

</RelativeLayout>