<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cut_window_rl"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00000000"
    android:gravity="center" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <!-- <com.qiandai.capture.QDCaptureImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" /> -->

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/caputre_head_bg1" >

            <Button
                android:id="@+id/cut_button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20.0dip"
                android:background="@drawable/cut_back_2" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_change_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35.0dip"
            android:layout_marginTop="32.0dip"
            android:layout_toRightOf="@id/relativeLayout2"
            android:background="@drawable/button_change_camera1" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/cup_window_linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/caputre_tab_bg1"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20.0dip"
            android:background="@drawable/button_restart1"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/button_finish1"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/cut_window_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="25.0dip"
        android:layout_toLeftOf="@id/cup_window_linearLayout1"
        android:background="@drawable/caputre_text1"
        android:text=""
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#ffffffff" />

</RelativeLayout>