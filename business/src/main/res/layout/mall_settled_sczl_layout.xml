<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin_normal"
        android:background="@color/gray_lighter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="营业执照"
        android:textColor="@color/text_black_light"
        android:textSize="@dimen/text_28" />

    <ImageView
        android:id="@+id/yingyezhizhao_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:padding="2dp"
        android:src="@drawable/share_b_public_add_to_photo_small" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin_normal"
        android:background="@color/gray_lighter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="法人身份证正反面照、法人手持身份证照"
        android:textColor="@color/text_black_light"
        android:textSize="@dimen/text_28" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/farenimg_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:padding="2dp"
            android:src="@drawable/share_b_public_add_to_photo_small" />

        <ImageView
            android:id="@+id/farenimg_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/share_b_public_add_to_photo_small" />

        <ImageView
            android:id="@+id/farenimg_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/share_b_public_add_to_photo_small" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin_normal"
        android:background="@color/gray_lighter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="特殊行业经营许可证"
        android:textColor="@color/text_black_light"
        android:textSize="@dimen/text_28" />

    <ImageView
        android:id="@+id/teshuhangye_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/share_b_public_add_to_photo_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal"
        android:padding="10dp" >

        <Button
            android:id="@+id/btn_mall_settled_tijiao"
            style="@style/btn_pink"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="提交资料" />
    </LinearLayout>

</LinearLayout>