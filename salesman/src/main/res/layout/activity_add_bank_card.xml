<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical" >

    <include layout="@layout/title_style_two" />

    <!-- <ScrollView -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="match_parent" > -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/mycardlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:divider="#000000"
            android:listSelector="#00000000" >
        </ListView>

        <TextView
            android:id="@+id/delete_proptys"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="长按可解绑银行卡"
            android:textColor="@color/prompt"
            android:textSize="12dp" />

        <LinearLayout
            android:id="@+id/add_bankcard"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="5dp"
            android:background="@drawable/layout_check_bg"
            android:orientation="horizontal" >

<!--             <ImageView -->
<!--                 android:layout_width="wrap_content" -->
<!--                 android:layout_height="wrap_content" -->
<!--                 android:layout_gravity="center" -->
<!--                 android:layout_marginLeft="20dp" -->
<!--                 android:src="@drawable/add_card_img" /> -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="添加信用卡"
                android:textColor="@color/txt_fg_normal"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>
    <!-- </ScrollView> -->

</LinearLayout>