<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_normal"
        android:orientation="vertical">

        <com.td.qianhai.epay.oem.views.CircleImageView
            android:id="@+id/img_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/share_s_public_head_small_big"

            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XXXX"
            android:textSize="@dimen/text_28"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_normal"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXXX"
        android:textColor="@color/text_black_light"
        android:textSize="@dimen/text_28"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/img_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/share_s_homepage_member_senior1"
        android:layout_marginRight="@dimen/margin_double"/>

</RelativeLayout>