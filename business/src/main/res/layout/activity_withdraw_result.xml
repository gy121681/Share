<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical" >

    <include layout="@layout/layout_top_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@drawable/bg_arc_white"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="25dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_346" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp"
            android:background="@color/blue_sky"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:text="提现审核已提交，待审核" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tvWithdrawSource"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="@color/tab_text_nor"
                android:text="支付宝" />

            <TextView
                android:id="@+id/tvWithdrawAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/tab_text_nor"
                android:text="237126" />
        </LinearLayout>
        
        <View android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_lighter"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="@color/tab_text_nor"
                android:text="提现金额" />

            <TextView
                android:id="@+id/tvWithdrawMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/pink_dark"
                android:text="¥0" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnWithdrawComplete"
        style="@style/btn_pink"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="6dp"
        android:text="完成" />
    
</LinearLayout>
