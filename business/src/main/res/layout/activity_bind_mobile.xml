<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical" >

    <include layout="@layout/layout_top_bar" />
    
        <View
        android:layout_width="match_parent"
        android:layout_height="1px"
         android:layout_marginTop="@dimen/margin_normal"/>

    <RelativeLayout
       
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="4dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_toLeftOf="@+id/btnGetVCode"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="5dp" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_account"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edMobiles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="输入手机号码"
                android:maxLength="11"
                android:numeric="integer"
                android:textSize="13sp" />
        </LinearLayout>

        <com.shareshenghuo.app.shop.widget.CountDownButton
            android:id="@+id/btnGetVCode"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
           android:background="@drawable/form_bg_pink"
            android:gravity="center"
            android:text="CountDownButton"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </RelativeLayout>
<!--      android:background="@drawable/btn_border_orange" -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal" />

    <LinearLayout
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp" >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_vcode"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edVCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="输入验证码"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <Button
        android:id="@+id/btnBind"
        style="@style/btn_red"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:textSize="15dp"
        android:gravity="center"
        android:text="确定" />

