<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical" >

    <include layout="@layout/title_style_two" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
                    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white" >

                    <ImageView
                        android:id="@+id/bank_img"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:src="@drawable/ps_unionpay" />
                </LinearLayout>
                <!-- <TextView -->
                <!-- android:layout_width="1dp" -->
                <!-- android:layout_height="match_parent" -->
                <!-- android:background="@color/" -->
                <!-- /> -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:paddingLeft="5dp"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/balace_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="0.00"
                        android:textColor="@color/blues"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/bank_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="手机"
                        android:textColor="@color/blues"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/cardtypr_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="姓名"
                        android:textColor="@color/blues"
                        android:textSize="15dp" />
                </LinearLayout>
            </LinearLayout>
        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="验证码"
                android:textColor="@color/txt_fg_normal"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/e_pay12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:background="@color/white"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textSize="14dp" />

            <Button
                android:id="@+id/tv_go_num"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginRight="10dp"
                android:layout_weight="5.5"
                android:background="@drawable/selector_next_normal"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/text_white"
                android:textSize="10.0dip" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_go2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button01_bg"
            android:gravity="center"
            android:text="充值"
            android:textColor="@color/text_white"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>