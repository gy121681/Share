<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/bg_activity"
    android:gravity="clip_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ruzhukaitong_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_normal"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/share_b_mine_icon_open" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="恭喜您通过审核"
            android:textColor="@color/bg_top_bar"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ktok_htdl_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/text_black_light"
            android:text="后台登录：http://" />

        <TextView
            android:id="@+id/ktok_dlzh_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/text_black_light"
            android:text="登录账号：1333333333" />
    </LinearLayout>

</LinearLayout>