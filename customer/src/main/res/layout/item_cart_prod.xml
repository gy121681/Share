<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/cbProdChoose"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:button="@null"
        android:background="@drawable/cb_red" />

    <ImageView
        android:id="@+id/ivProdPhoto"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_marginLeft="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/share_c_business_details_photo_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvProdName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/tab_text_nor"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/tvProdNewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/pink_dark"
                android:text="¥0" />

            <TextView
                android:id="@+id/tvProdOldPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="11sp"
                android:textColor="@color/gray_light"
                android:text="原价：¥0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/gray_light"
                android:text="规格：" />

            <TextView
                android:id="@+id/tvProdFormat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:textColor="@color/gray_light" />

            <com.shareshenghuo.app.user.widget.NumberPickLayout
                android:id="@+id/npProdCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
            </com.shareshenghuo.app.user.widget.NumberPickLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
