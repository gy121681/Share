<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="2.0dip"
        android:background="@drawable/form_all_bg"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip" >

        <TextView
            android:id="@+id/tv_into_basis_type"
            android:layout_width="45.0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:gravity="center"
            android:paddingLeft="3.0dip"
            android:paddingTop="3.0dip"
            android:text="转出其它"
            android:textColor="@color/txt_fg_normal"
            android:textSize="19.0sp"
            android:textStyle="bold" />

       

        <TextView
            android:id="@+id/tv_minimum_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_minimum_amt_hint"
            android:layout_alignBottom="@+id/tv_minimum_amt_hint"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:paddingLeft="3.0dip"
            android:paddingTop="3.0dip"
            android:text="100.00"
            android:textColor="@color/txt_fg_normal"
            android:textSize="10.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_minimum_amt_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_interest_rates"
            android:layout_alignBottom="@+id/tv_interest_rates"
            android:layout_toLeftOf="@+id/tv_minimum_amt"
            android:background="#00000000"
            android:paddingLeft="3.0dip"
            android:paddingTop="3.0dip"
            android:text="起存金额:"
            android:textColor="@color/txt_fg_normal"
            android:textSize="10.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_product_name_hint"
            android:layout_alignBottom="@+id/tv_product_name_hint"
            android:layout_alignLeft="@+id/tv_interest_rates"
            android:background="#00000000"
            android:paddingLeft="3.0dip"
            android:paddingTop="3.0dip"
            android:singleLine="true"
            android:text="前海支付一大方发放大asdaddsafa"
            android:textColor="@color/txt_fg_normal"
            android:textSize="10.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_product_name_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_into_basis_type"
            android:layout_toRightOf="@+id/tv_into_basis_type"
            android:background="#00000000"
            android:paddingLeft="3.0dip"
            android:paddingTop="3.0dip"
            android:text="产品名称:"
            android:textColor="@color/txt_fg_normal"
            android:textSize="10.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_interest_rates_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_product_name_hint"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:paddingLeft="3.0dip"
            android:paddingTop="3.0dip"
            android:text="挂牌利率:"
            android:textColor="@color/txt_fg_normal"
            android:textSize="10.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_into_currency_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_into_basis_type"
            android:layout_alignLeft="@+id/tv_interest_rates_hint"
            android:background="#00000000"
            android:paddingLeft="3.0dip"
            android:paddingTop="3.0dip"
            android:text="币种:"
            android:textColor="@color/txt_fg_normal"
            android:textSize="10.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_into_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_into_currency_hint"
            android:layout_alignBottom="@+id/tv_into_currency_hint"
            android:layout_toRightOf="@+id/tv_into_currency_hint"
            android:background="#00000000"
            android:paddingLeft="3.0dip"
            android:paddingTop="3.0dip"
            android:text="人民币"
            android:textColor="@color/txt_fg_normal"
            android:textSize="10.0sp"
            android:textStyle="bold" />

         <TextView
             android:id="@+id/tv_period"
             android:layout_width="wrap_content"
             android:visibility="gone"
             android:layout_height="wrap_content"
             android:layout_alignBaseline="@+id/tv_period_hint"
             android:layout_alignBottom="@+id/tv_period_hint"
             android:layout_alignRight="@+id/tv_minimum_amt"
             android:background="#00000000"
             android:paddingLeft="3.0dip"
             android:paddingTop="3.0dip"
             android:text="3个月"
             android:textColor="@color/txt_fg_normal"
             android:textSize="10.0sp"
             android:textStyle="bold" />

         <TextView
             android:id="@+id/tv_period_hint"
             android:layout_width="wrap_content"
             android:visibility="gone"
             android:layout_height="wrap_content"
             android:layout_alignBaseline="@+id/tv_into_currency"
             android:layout_alignBottom="@+id/tv_into_currency"
             android:layout_toLeftOf="@+id/tv_period"
             android:background="#00000000"
             android:paddingLeft="3.0dip"
             android:paddingTop="3.0dip"
             android:text="存期:"
             android:textColor="@color/txt_fg_normal"
             android:textSize="10.0sp"
             android:textStyle="bold" />

         <TextView
             android:id="@+id/tv_interest_rates"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/tv_product_name"
             android:layout_toRightOf="@+id/tv_interest_rates_hint"
             android:background="#00000000"
             android:paddingLeft="3.0dip"
             android:paddingTop="3.0dip"
             android:text="5%"
             android:textColor="@color/txt_fg_normal"
             android:textSize="10.0sp"
             android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>