<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_white"
              android:orientation="vertical">

    <include layout="@layout/title_style_two"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height3"
                android:background="@color/white">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_weight="1.3"
                    android:text="旧手机号:"
                    android:textColor="@color/text_black_light"
                    android:textSize="@dimen/text_28"/>

                <EditText
                    android:id="@+id/tv_old_phonenumber"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:layout_weight="3.0"
                    android:background="@color/transparent"
                    android:hint="请输入手机号码"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/text_black_light"
                    android:textColorHint="@color/text_gray"
                    android:textSize="@dimen/text_28"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/et_deale_cert_no_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height3"
                android:background="@color/white">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_weight="1.3"
                    android:text="新手机号:"
                    android:textColor="@color/text_black_light"
                    android:textSize="@dimen/text_28"/>

                <EditText
                    android:id="@+id/tv_new_phonenumber"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:layout_weight="3.0"
                    android:background="@color/transparent"
                    android:hint="请输入新手机号码"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/text_black_light"
                    android:textColorHint="@color/text_gray"
                    android:textSize="@dimen/text_28"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/et_deale_cert_no_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height3"
                android:background="@color/white">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_weight="1.3"
                    android:text="确认新手机号:"
                    android:textColor="@color/text_black_light"
                    android:textSize="@dimen/text_28"/>

                <EditText
                    android:id="@+id/tv_verify_new_phonenumber"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:layout_weight="3.0"
                    android:background="@color/transparent"
                    android:hint="请再次输入新手机号码"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/text_black_light"
                    android:textColorHint="@color/text_gray"
                    android:textSize="@dimen/text_28"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_height3"
                android:background="@color/white">

                <TextView
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_normal"
                    android:layout_weight="1.3"
                    android:text="短信验证码:"
                    android:textColor="@color/text_black_light"
                    android:textSize="@dimen/text_28"/>

                <EditText
                    android:id="@+id/et_alterphone_verif_code"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.8"
                    android:background="@color/transparent"
                    android:hint="请输入短信验证码"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:textColor="@color/text_black_light"
                    android:textColorHint="@color/text_gray"
                    android:textSize="@dimen/text_28"/>

                <com.td.qianhai.epay.oem.views.CountDownButton
                    android:id="@+id/btn_alterphone_get_verif_code"
                    android:layout_width="0.0dip"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_half"
                    android:layout_marginRight="@dimen/margin_normal"
                    android:layout_marginTop="@dimen/margin_half"
                    android:layout_weight="1.2"
                    android:background="@drawable/selector_public_button2"
                    android:text="获取验证码"
                    android:textColor="@color/text_black_light"
                    android:textSize="@dimen/text_28"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp">

                <Button
                    android:id="@+id/btn_chenge_phonenumber_submit"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/reg_btn_next_height"
                    android:layout_weight="1.0"
                    android:background="@drawable/selector_public_button"
                    android:text="提交申请"
                    android:textColor="@color/text_white"
                    android:textSize="@dimen/text_36"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>