<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/bgcolor"
    android:orientation="vertical" >
    
    <include layout="@layout/title_style_three" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="开启打印"
            android:textSize="14dp" />

        <CheckBox
            android:id="@+id/checs"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:button="@drawable/checkbox_btn" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_go"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button01_bg"
        android:gravity="center"
        android:text="搜索配对蓝牙"
        android:layout_marginTop="20dp"
        android:textColor="@color/text_white"
        android:textSize="20dp" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/window_bg"
        android:paddingBottom="8.0dip"
        android:paddingTop="8.0dip"
        android:paddingLeft="10dp"
        android:text="已配对设备"
        android:textColor="@color/txt_fg_gray"
        android:textSize="14.0dip" />

    <View
        android:id="@+id/divider1"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@drawable/divider"
        android:visibility="gone" />

    <ListView
        android:id="@+id/lv1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10.0dip"
        android:paddingTop="10.0dip"
        android:textColor="@color/black"
        android:textSize="16.0dip" />
    
    
    <TextView 
        android:background="@color/white"
        android:layout_width="match_parent"
        android:textColor="@color/gray"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="使用说明\n1:请打开1台打印机，关闭其他蓝牙设备.\n2:首次使用需搜索蓝牙打印机并配对.\n3:配对成功,消费完成即自动打印小票.\n4:再次打印小票请点击“再次打印”."
        />

    <ListView
        android:visibility="gone"
        android:id="@+id/new_devices"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_weight="2"
        android:stackFromBottom="true" />

    <View
        android:id="@+id/divider2"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@drawable/divider"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_menu_item_bg"
        android:paddingBottom="10.0dip"
        android:paddingTop="10.0dip"
        android:text="按钮2"
        android:textColor="@color/black"
        android:textSize="16.0dip"
        android:visibility="gone" />

    <View
        android:id="@+id/divider3"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@drawable/divider"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_menu_item_bg"
        android:paddingBottom="10.0dip"
        android:paddingTop="10.0dip"
        android:text="按钮3"
        android:textColor="@color/black"
        android:textSize="16.0dip"
        android:visibility="gone" />

    <View
        android:id="@+id/divider4"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@drawable/divider"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_menu_item_bg"
        android:paddingBottom="10.0dip"
        android:paddingTop="10.0dip"
        android:text="按钮4"
        android:textColor="@color/black"
        android:textSize="16.0dip"
        android:visibility="gone" />

    <View
        android:id="@+id/divider5"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@drawable/divider"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_menu_item_bg"
        android:paddingBottom="10.0dip"
        android:paddingTop="10.0dip"
        android:text="按钮5"
        android:textColor="@color/black"
        android:textSize="16.0dip"
        android:visibility="gone" />

</LinearLayout>