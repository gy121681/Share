<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="horizontal"
    android:padding="6dp" >

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="75dp" >

        <ImageView
            android:id="@+id/ivShopLogo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/share_c_business_details_photo_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/ivShopTagHui"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/tag_hui" />

            <ImageView
                android:id="@+id/ivShopTagQuan"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/tag_quan" />

            <ImageView
                android:id="@+id/ivShopTagQing"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/tag_qing" />

            <ImageView
                android:id="@+id/ivShopTagSong"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/tag_song" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvShopName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="小吕咖啡厅"
            android:textSize="13dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivShopTagIntegrity"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:src="@drawable/tag_integrity"/>

            <ImageView
                android:id="@+id/ivShopTagAuth"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/tag_auth"/>

            <ImageView
                android:id="@+id/ivintegral"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="4dp"/>

            <ImageView
                android:id="@+id/ivintegral1"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/zxf_img"/>

            <TextView
                android:id="@+id/tvShopContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/gray_light"
                android:textSize="12dp"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/area_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/child_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:textColor="@color/gray_light"
                android:textSize="11dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_124"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvShopBrowseCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/gray_light"
                android:textSize="12sp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_137"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvShopCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/gray_light"
                android:textSize="12sp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="11dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/tvShopRange"
                    android:src="@drawable/icon_82"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/tvShopRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0km"
                    android:textColor="@color/gray_light"
                    android:textSize="11sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvShopPerFee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="人均¥0.0"
                android:textColor="@color/bg_top_bar"
                android:textSize="12dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>