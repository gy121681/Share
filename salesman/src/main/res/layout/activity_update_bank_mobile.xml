<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_white"
              android:orientation="vertical" >

    <include layout="@layout/title_style_two" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview_style"
                android:layout_weight="4.5"
                android:gravity="center_vertical"
                android:text="银行卡号"
                android:paddingLeft="@dimen/margin_normal"
                android:textColor="@color/text_black_light" />

            <TextView
                android:id="@+id/tv_bankcard"
                style="@style/editview_style"
                android:maxLength="25"
                android:textSize="@dimen/text_28"
                android:text=""
                android:textColor="@color/text_black_light"
                />

        </LinearLayout>

        <include layout="@layout/common_line_h" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <TextView
                style="@style/textview_style"
                android:layout_weight="4.5"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_normal"
                android:text="银行预留手机号"
                android:textColor="@color/text_black_light" />

            <EditText
                android:id="@+id/edt_mobile"
                style="@style/editview_style"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:textSize="@dimen/text_28"
                android:text=""
                android:textColor="@color/text_black_light"
                android:textColorHint="@color/text_gray"
                />

        </LinearLayout>

        <include layout="@layout/common_line_h" />

    </LinearLayout>

    <TextView
        android:id="@+id/btn_edit_bankmobile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/reg_btn_next_height"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/selector_public_button"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_36" />

</LinearLayout>