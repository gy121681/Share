<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical" >
    <include
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/balance_topbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"      
        android:orientation="vertical" >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height">
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:text="银行卡号："/>
            <EditText 
                android:id="@+id/et_balance_query_bank_code"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_weight="2"
		        android:paddingLeft="5dp"
		        android:background="@drawable/evbackground"
            	android:hint="请刷银行卡号"
            	android:enabled="false"
            	android:inputType="phone"
            	android:maxLength="19"
            	android:gravity="center_vertical"
            	android:drawableRight="@drawable/brush"
            	android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="@dimen/layout_height">
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:textSize="16dp"
                android:text="输入密码："/>
            <EditText 
                android:id="@+id/et_balance_query_password"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:layout_weight="2"
		        android:paddingLeft="5dp"
		        android:maxLength="6"
		        android:imeOptions="actionSearch"
		        android:background="@drawable/evbackground"
            	android:gravity="center_vertical"
            	android:password="true"
                android:inputType="phone"
            	android:textSize="16dp"/>
        </LinearLayout>
    	<LinearLayout 
    	    android:layout_marginTop="20dp"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
    	    android:gravity="center_horizontal">
    	    <ImageView 
        	    android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"/>
    	</LinearLayout>
    	<LinearLayout 
    	    android:padding="20dp"
    	    android:layout_width="match_parent"
    	    android:layout_height="80dp"
    	    android:background="@drawable/authentication_bg"
    	    android:gravity="center">
    	    <TextView 
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:text="@string/balance_query_point"
    	        android:textSize="@dimen/size_14"
    	        android:textColor="@color/red"/>
    	</LinearLayout>   
    </LinearLayout>

</LinearLayout>
