<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical" >
    
    <include layout="@layout/layout_top_bar"/>

    <LinearLayout
        android:id="@+id/llContactTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="@color/bg_white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/tab_text_nor"
            android:text="我们的联系电话：" />

        <TextView
            android:id="@+id/tvContactTel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="@color/tab_text_nor" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/share_c_business_details_telephone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llContactQQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:background="@color/bg_white"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/tab_text_nor"
            android:text="直接联系客服：" />

        <TextView
            android:id="@+id/tvContactQQ"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="13sp"
            android:textColor="@color/tab_text_nor" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/share_c_business_details_service" />
    </LinearLayout>

    <EditText
        android:id="@+id/edFeedbackContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_normal"
        android:padding="8dp"
        android:gravity="top"
        android:lines="5"
        android:maxLength="200"
        android:hint="请写下您的宝贵意见(200字以内)"
        android:textSize="15sp"
        android:background="@drawable/bg_border_gray" />

    <Button
        android:id="@+id/btnFeedback"
        style="@style/btn_pink"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="@dimen/margin_normal"
        android:text="提交" />
</LinearLayout>
