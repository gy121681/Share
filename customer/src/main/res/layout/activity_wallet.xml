<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/icon_1" />

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_margin="@dimen/margin_normal"
            android:src="@drawable/arrow_left" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/icon_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="@color/text_white"
            android:textStyle="bold"
            android:text="我的余额" />

        <TextView
            android:id="@+id/tvWalletDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_white"
            android:text="明细" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvWalletMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:textColor="@color/pink"
            android:textSize="40sp"
            android:textStyle="bold"
            android:text="¥123.0" />

        <Button
            android:id="@+id/llWalletWithdraw"
            style="@style/btn_border_red"
            android:layout_marginTop="25dp"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="18sp"
            android:text="我要提现" />

        <View android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/bg_line"
            android:textColor="@color/gray_light"
            android:text="充值" />

        <EditText
            android:id="@+id/edRechargeFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="@dimen/margin_normal"
            android:hint="请输入充值金额"
            android:textSize="13sp"
            android:inputType="numberDecimal"
            android:background="@drawable/bg_arc_gray" />

        <Button
            android:id="@+id/llWalletRecharge"
            style="@style/btn_pink"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_normal"
            android:layout_marginRight="@dimen/margin_normal"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="确认充值" />

    </LinearLayout>
</LinearLayout>
